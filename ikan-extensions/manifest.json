{
  "name": "ikan",
  "version": "0.0.1",
  "description": "ikan —— One account watch all video.",
  "background": {
    "scripts": [ "js/background.js" ]
  },
  "browser_action": {
//    "default_popup": "popup.html",
    "default_title": "ikan"
  },
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "icons": {
    "128": "image/icon.png"
  },
  "permissions":["storage","browserAction","runtime","tabs"],

  "content_scripts": [
    {
      "matches": ["*://*.youku.com/*","*://*.le.com/*","*://*.qq.com/*","*://*.sohu.com/*","*://*.tudou.com/*","*://*.iqiyi.com/*"],
      "js": ["js/jquery.js", "myscript.js"],
      "all_frames":true
    }
  ],
  "manifest_version": 2
}